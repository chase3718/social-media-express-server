{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "./dist"]
}
